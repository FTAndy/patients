  div class='row'
    div class='col-xs-6 offset-md-3'
      h1 Patient MR#{@patient.mr}
      p
        strong = t :full_name
        | ：
        b = @patient.full_name
      p
        strong = t :mr
        | ：
        b = @patient.mr
      p
        strong = t :age
        | ：
        b = @patient.age
      p
        strong = t :gender
        | ：
        b = @patient.gender_text
      p
        strong = t :status
        | ：
        b = @patient.status_text
      p
        strong = t :location
        | ：
        b = link_to @patient.location.name, location_path(@patient.location.id)
      p
        strong = t :viewed_count
        | ：
        b = @patient.viewed_count
      a href='#{root_path}' class='btn btn-primary' = t :back

